{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,   
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "tests"]
}

